#include <stdio.h>
void bubble ( int *a, int n,int (*compare)(int,int))
{
int i,j,temp;
for (i=0;i<n;i++)
{
    for(j=0;j<n-1;j++)
{
    compare( a[i],a[i+1]>0);//callbackfunction
}

}
}
void compare(int a, int b)
{
        int temp;
        temp =a;
        a=b;
        b=temp;
}
int main()
{
int a[]={2,7,8,5,0,1};
bubble(a,6,compare);
for(int i =0;i<6;i++)
printf ("%d",a[i]);
return 0;
}
//note:code reusability,used in windows api,notification
